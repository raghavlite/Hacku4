<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<ScrollView 
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
   
    <EditText
        android:id="@+id/ser_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="NAME" />

    <EditText
        android:id="@+id/ser_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ser_url"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="NO OF VALUES" />

    <EditText
        android:id="@+id/ser_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ser_key"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="ENTER URL HERE" />

    <EditText
        android:id="@+id/ser_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ser_name"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="KEYWORD" />

    <EditText
        android:id="@+id/ser_wantedv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="values to be fetched" />

    <EditText
        android:id="@+id/ser_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ser_wantedv"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="30dp"
        android:hint="xml/json/rss"
        android:ems="10" />

    
    
     <Button
        android:id="@+id/btn_create_se"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="CREATE SERVICE" />
    
    
    
</LinearLayout>

</ScrollView>
</RelativeLayout>
